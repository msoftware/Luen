<!-- Circular reveal container for the sheet -->
<io.codetail.widget.RevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end|bottom"
    android:orientation="vertical">

    <!-- Sheet that contains your items -->
    <android.support.v7.widget.CardView
        android:id="@+id/fab_sheet"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_sheet_open"
                style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                android:drawableLeft="@drawable/ic_open_vector"
                android:drawableStart="@drawable/ic_open_vector"
                android:text="Запустить" />

            <TextView
                android:id="@+id/info_sheet_extract"
                style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                android:drawableLeft="@drawable/ic_extract_vector"
                android:drawableStart="@drawable/ic_extract_vector"
                android:text="Извлечь APK" />

            <TextView
                android:id="@+id/info_sheet_share"
                style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                android:drawableLeft="@drawable/ic_share_vector"
                android:drawableStart="@drawable/ic_share_vector"
                android:text="Поделиться" />

            <TextView
                android:id="@+id/info_sheet_delete"
                style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                android:drawableLeft="@drawable/ic_delete_vector"
                android:drawableStart="@drawable/ic_delete_vector"
                android:text="Удалить" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</io.codetail.widget.RevealLinearLayout>